@import './_variable.styl'
html,
body{
  height 100%
}

#app{
  position relative
  height 100%
}

.al-header{
  height 50px
  background-color: $baseBgColor;
}

.al-content{
  display flex
  height calc(100% - 50px)
  .al-aside{
    width 200px
    background-color: #fff;
  }
  .al-main{
    flex 1
    min-width: 980px;
    color: $fontColor6;
    background-color: $grayBgColor;
    overflow: auto;
  }
  .al-breadcrumb{
    height 50px
    padding 18px 0
    padding-left 20px
    margin-bottom: 20px;
    background: #fff;
  }
  .al-index-view{
    padding: 0 20px 20px;
  }
}